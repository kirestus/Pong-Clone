{
    "version": 8,
    "configurePresets": [
         {
            "name": "ClangIOS",
            "displayName": "Clang 15.0.0 arm64-apple-darwin23.5.0",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        },
        {
            "name": "vs64",
            "displayName": "VisualStuidio 22 - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],


    "buildPresets": [
        {
            "name": "vs64-debug",
            "displayName": "Visual Studio Community 2022 Release - amd64 - Debug",
            "configurePreset": "vs64",
            "configuration": "Debug"
        },
        {
            "name": "vs64-release",
            "displayName": "Visual Studio Community 2022 Release - amd64 - Release",
            "configurePreset": "vs64",
            "configuration": "Release"
        },
        {
            "name": "clang-debug",
            "displayName": "Clang 15.0.0 arm64-apple-darwin23.5.0 Debug",
            "configurePreset": "ClangIOS",
            "configuration": "Debug"
        },
        {
            "name": "clang-release",
            "displayName": "Clang 15.0.0 arm64-apple-darwin23.5.0 Debug",
            "configurePreset": "ClangIOS",
            "configuration": "Release"
        }
    ]
}